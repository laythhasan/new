@model Bisnicity.Models.ServicesModel

@{
    ViewData["Title"] = "AddServices";
    var mess = TempData["messsages"] ?? string.Empty;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BusnisCity Add Services</title>
    <link rel="icon" href="~/assets/images/logo-businicity.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/css/toastr.css" rel="stylesheet" />
</head>

<body style="background-image: url(../assets/images/home.jpg);">

    <section class="h-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-10">
                    <div class="card card-registration my-4">
                        <div class="row g-0">

                            <div class="col-xl-12">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase  text-center">Add Services</h3>
                                    <form asp-action="Addservice" asp-controller="Business" enctype="multipart/form-data" method="post">

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example8">Service Name</label>

                                            <input type="text" asp-for="Servicename"
                                                   class="form-control form-control-lg" />
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example8">pharagraph</label>

                                            <div class="form-floating">
                                                <textarea class="form-control" asp-for="paragraph"
                                                          style="height: 100px"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form3Example8">Background Image</label>

                                            <input type="file" asp-for="Image"
                                                   class="form-control form-control-lg" />
                                        </div>
                                        <button type="submit" class="btn btn-lg text-white"
                                                style="background-color: #178b90;">
                                            Add
                                            Service
                                        </button>
                                        <a href=@Url.Action("Index","Business") class="btn btn-danger btn-lg text-white">
                                            End
                                            Service
                                        </a>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/toastr.min.js"></script>
</body>

</html>


<script type="text/javascript">
    $(document).ready(function () {
        var ss = '@mess';
        if (ss) {
            toastr.success(ss);
        }
    })
</script>

