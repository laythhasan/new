@model Bisnicity.Models.ViewPersonViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ProfilePerson";

    Layout = "_LayoutPerson";
    //var mess = TempData["editsucc"] ?? string.Empty;
}

<section class="py-5 d-flex align-items-center" id="header">



    <div class="container">
        <div class="main-body">



            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/ProfilImage/@Model.pathimage" alt="Admin" class="rounded-circle" width="100" height="auto">
                                <div class="mt-3">
                                    <h4>@Model.FirsName @Model.LastName</h4>


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                         viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                         stroke-linecap="round" stroke-linejoin="round"
                                         class="feather feather-globe mr-2 icon-inline">
                                    </svg>  <i class="fab fa-linkedin"></i> LinkedIN
                                </h6>


                                <span class="text-secondary">@Model.Linklinkedin</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                         viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                         stroke-linecap="round" stroke-linejoin="round"
                                         class="feather feather-github mr-2 icon-inline">

                                    </svg><i class="far fa-envelope"></i> Email
                                </h6>
                                <span class="text-secondary">@Model.Email</span>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.FirsName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Last Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.LastName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.PhoneNo
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0"> Age</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Age
                                </div>
                            </div>
                            <hr /><hr />

                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn btn-success " href="#">Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row gutters-sm">

                        <div class="col-sm-12 mb-3">
                            <div class="card h-100">
                                <a href=@Url.Action("ShowCompanyJob2","Person") class="btn btn-outline-dark"><i class="fas fa-archway"></i> Show Company</a>
                                <a href=@Url.Action("TempOfPerson","Person") class="btn btn-block btn-outline-dark"><i class="fas fa-archway"></i> Show Temp</a>
                            </div>
                        </div>
                    </div>



                </div>
            </div>

        </div>
    </div>

</section>

<!-- Scripts -->
<script src="~/js/bootstrap.min.js"></script><!-- Bootstrap framework -->
<script src="~/js/purecounter.min.js"></script> <!-- Purecounter counter for statistics numbers -->
<script src="~/js/swiper.min.js"></script><!-- Swiper for image and text sliders -->
<script src="~/js/aos.js"></script><!-- AOS on Animation Scroll -->
<script src="~/js/script.js"></script> <!-- Custom scripts -->
