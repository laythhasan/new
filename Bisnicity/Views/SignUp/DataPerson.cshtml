@model Bisnicity.Models.DataPersonViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{

    var mess = TempData["messsages"] ?? string.Empty;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/fontawesome-all.min.css" rel="stylesheet">
    <link href="~/css/aos.min.css" rel="stylesheet">
    <link href="~/css/swiper.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/sign.css">
    <link rel="stylesheet" href="~/css/img.css">

    <link href="~/css/toastr.css" rel="stylesheet" />
    <!-- Favicon -->
    <link rel="icon" href="~/assets/images/favicon.png">
    <title>BusnisCity Join Of Traning</title>
    <link rel="icon" href="~/assets/images/logo-businicity.png" type="image/x-icon">
</head>

<body class="signUpPerson">



    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <a href=@Url.Action("Index1","Home")><img src="~/assets/images/logo-businicity.png" alt="" width="75%"> </a>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="wrap d-md-flex">

                        <div class="login-wrap p-4 p-md-5 col-md-12">
                            <div class="row justify-content-center py-md-5">
                                <div class="col-lg-9">
                                    <div class="social-wrap">
                                        <h3 class="mb-3 text-center">Signup with BusinessCity </h3>
                                        <p class="social-media d-flex justify-content-center">
                                            <a href="#"
                                               class="social-icon google d-flex align-items-center justify-content-center">
                                                <span class="fa fa-google"></span>
                                            </a>
                                            <a href="#"
                                               class="social-icon facebook d-flex align-items-center justify-content-center">
                                                <span class="fa fa-facebook"></span>
                                            </a>
                                            <a href="#"
                                               class="social-icon twitter d-flex align-items-center justify-content-center">
                                                <span class="fa fa-twitter"></span>
                                            </a>
                                            <a href="#"
                                               class="social-icon youtube d-flex align-items-center justify-content-center">
                                                <span class="fa fa-youtube"></span>
                                            </a>
                                            <a href="#"
                                               class="social-icon Insta d-flex align-items-center justify-content-center">
                                                <span class="fa fa-instagram"></span>
                                            </a>
                                        </p>
                                        <p class="or">
                                            <span>or</span>
                                        </p>
                                    </div>
                                    <form asp-action="DataPerson" asp-controller="SignUp" method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="name"> Name</label>
                                                    <input asp-for="@Model.Name" type="text" class="form-control">
                                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="name">Email</label>
                                                    <input asp-for="@Model.Email" type="email" class="form-control">
                                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                                                </div>
                                            </div>


                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="label" for="name">PhoneNo</label>
                                                    <input asp-for="@Model.phoneeNo" type="tel" class="form-control">
                                                    <span asp-validation-for="@Model.phoneeNo" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group">

                                                    <label class="label">Gender</label>
                                                    <select asp-for="genderID" class="form-control"
                                                            asp-items="@(new SelectList(Model.Genders, "GenderID", "GenderName"))">
                                                    </select>
                                                    <span asp-validation-for="genderID" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="label">Education level</label>
                                                    <select asp-for="levelID" class="form-control"
                                                            asp-items="@(new SelectList(Model.Educationlevels,"EducationlevelID","levelName"))"></select>
                                                    <span asp-validation-for="levelID" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="label">Univircity</label>
                                                    <select asp-for="uniID" class="form-control"
                                                            asp-items="@(new SelectList(Model.univircitys,"UnivircityID","UniName"))"></select>
                                                    <span asp-validation-for="uniID" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <input type="submit" value="  Create an account" class="btn submit p-3 text-white"
                                                           style="background-color: #178b90;" />

                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                        </div>

                                   
                                    <div class="w-100">
                                        <p class="mt-4  text-center">
                                            I Have Account <a href="@Url.Action("LoginPerson","SignUp")"
                                                              class="text-danger">
                                                Sign
                                                In
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/js/bootstrap.min.js"></script><!-- Bootstrap framework -->
    <script src="~/js/purecounter.min.js"></script> <!-- Purecounter counter for statistics numbers -->
    <script src="~/js/swiper.min.js"></script><!-- Swiper for image and text sliders -->
    <script src="~/js/aos.js"></script><!-- AOS on Animation Scroll -->
    <script src="~/js/script.js"></script> <!-- Custom scripts -->
    <script src="~/js/script.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        var ss = '@mess';
        if (ss) {
            toastr.error(ss);
        }
    })
</script>


